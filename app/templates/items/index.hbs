<h2>List</h2>

<div class="row">
  {{#each model as |item|}}
    <div class="col-md-6">
      {{#item-item item=item}}
        {{#link-to 'items.edit' item.id class="btn btn-success btn-xs"}}Edit{{/link-to}}
        <button class="btn btn-danger btn-xs" {{action 'deleteItem' item}}>Delete</button>
      {{/item-item}}
    </div>
  {{/each}}
</div>
