<div class="panel panel-default invoice-item {{if item.paid 'invoice-item-paid' 'invoice-item-unpaid'}}">
    <div class="panel-heading">
        <h3 class="panel-title"><b>Invoice ID</b> {{#link-to 'invoices.view' item.id}}{{item.id}}{{/link-to}}</h3>
    </div>
    <div class="panel-body">
        <p>Amount: {{item.amount}}</p>
        <p>Date: {{item.date}}</p>
        <p>Customer Name: {{#link-to 'customers.edit' item.customer.id}}{{item.customer.forename}} {{item.customer.surname}}{{/link-to}}</p>
    </div>
    <div class="panel-footer text-right">
      {{yield}}
    </div>
</div>
