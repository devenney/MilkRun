<div class='form-group'>
  <label class="control-label col-sm-3">{{label}}</label>
  <div class="col-sm-9">
    {{input type=type value=value placeholder=placeholder class='form-control' name=valuePath disabled=(if disabled true false)}}
    {{#if isValid}}
      <span class='valid-input fa fa-check'></span>
    {{/if}}

    <div class='input-error'>
      {{#if showErrorMessage}}
        <span class='help-block'>
          {{v-get model valuePath 'message'}}
        </span>
      {{/if}}

      {{#if showWarningMessage}}
        <div class='warning'>
          {{v-get model valuePath 'warningMessage'}}
        </div>
      {{/if}}
    </div>
  </div>
</div>
