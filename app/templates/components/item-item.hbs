<div class="panel panel-primary item-item">
  <div class="panel-heading">
    <h3 class="panel-title">{{item.name}}</h3>
  </div>

  <div class="panel-body">
    <p>Unit of Measurement: {{item.unit}}</p>
    <p>Price Per Unit: {{format-money item.ppu}}</p>
  </div>

  <div class="panel-footer text-right">
    {{yield}}
  </div>
</div>

