<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label" for="model.date">Date*</label>
    <div class="col-sm-10">
      {{bootstrap-datepicker value=model.date class="form-control" todayHighlight=true}}
      <span class="glyphicon glyphicon-ok form-control-feedback"></span>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label" for="model.amount">Amount</label>
    <div class="col-sm-10">
      {{input type="number" value=model.amount class="form-control" placeholder="The amount of the Invoice"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label" for="model.customer">Customer:</label>
    <div class="col-sm-10">
      {{#x-select class="form-control" value=model.customer action=(action (mut model.customer)) as |xs|}}
        <option value="" selected=true disabled>Select a Customer</option>
        {{#each customers as |option|}}
          {{#xs.option value=option}}{{option.forename}}{{/xs.option}}
        {{/each}}
      {{/x-select}}
    </div>
  </div>
  <button type="submit" class="btn btn-default" {{action 'buttonClicked' model}}>
    {{buttonLabel}}
  </button>
</div>
